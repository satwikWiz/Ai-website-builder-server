// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Variant {
  id            String   @id @default(cuid())
  subdomain    String
  variantNumber Int
  name         String
  html         String   @default("")
  elements     String   // JSON string of editor elements
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([subdomain, variantNumber])
  @@index([subdomain])
}

